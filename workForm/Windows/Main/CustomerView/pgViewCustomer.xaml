<Page x:Class="workForm.Windows.Main.CustomerView.pgViewCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:workForm.Windows.Main.CustomerView"
      mc:Ignorable="d" 
      Height="350" Width="650"
      Title="pgViewCustomer">

    <Grid Margin="0,0,20,20">
        <Grid Width="150" HorizontalAlignment="Left" Height="280" VerticalAlignment="Bottom" >
            <StackPanel Margin="20,0,20,0">
                <Button x:Name="btnView" Content="View" />
                <Button x:Name="btnAdd" Content="Add" Margin="0,10,0,0" />
                <Button x:Name="btnEdit" Content="Edit" Margin="0,10,0,0" />
                <Button x:Name="btnDelete" Content="Delete" Margin="0,10,0,0" />
            </StackPanel>
        </Grid>
        <Grid Width="480" Height="280" HorizontalAlignment="Right" VerticalAlignment="Bottom">

        </Grid>
    </Grid>
</Page>
