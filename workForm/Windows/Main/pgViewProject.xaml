<Page x:Class="workForm.Windows.Main.pgViewProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:workForm.Windows.Main"
      mc:Ignorable="d" 
       Height="350" Width="650" 
      Title="pgViewProject">

    <Grid>
        <Grid Width="150" HorizontalAlignment="Left" Height="300" VerticalAlignment="Bottom">
            <StackPanel Margin="20,0,20,0">
                <Button x:Name="btnSelect" Content="Select" Click="btnSelect_Click" />
                <Button x:Name="btnAdd" Content="Add" Margin="0,10,0,0" Click="btnAdd_Click" />
                <Button x:Name="btnEdit" Content="Edit" Margin="0,10,0,0" Click="btnEdit_Click" />
                <Button x:Name="btnDelete" Content="Delete" Margin="0,10,0,0" />
            </StackPanel>
        </Grid>
        <Grid Width="500" HorizontalAlignment="Right">
            <Frame x:Name="Frame1"/>
        </Grid>
    </Grid>
</Page>
